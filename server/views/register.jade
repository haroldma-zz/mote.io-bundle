extends layout

block content

  #content.container.text-page
    .row
      .span6

        h2 Sign up for Mote.io!
        hr
        p.hide-on-mobile
          strong Phone not supported yet?
        p.hide-on-mobile Sign up anyway to join the mailing list. I'll notify you when new versions are available.
        hr.hide-on-mobile

      .span2
      .span4

        - if (typeof(alert) !== 'undefined'){
          .alert #{alert}
        - }

        - if (typeof(err) !== 'undefined'){
          .alert.alert-error #{err}
        - }

        form(action="/register",method="post")
          div
            label Email
            input(type="text",name="username")

          div
            label Password
            input(type="password",name="password")

          div
            input.btn(type="submit",value="Register")

          div
            hr
            p Did you really mean to&nbsp;
              a(href='/login') login
              | ?

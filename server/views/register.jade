block content

  #content.container.text-page
    .row
      .span4
      .span4

        h2 Register
        hr

        if (err)
          .alert.alert-error #{err}

        form(action="/register",method="post")
          div
            label Email
            input(type="text",name="username")

          div
            label Password
            input(type="password",name="password")

          div
            input.btn(type="submit",value="Register")

          div
            hr
            p Did you really mean to &nbsp;
              a(href='/login') login
              | ?

extends layout

block content
  #content.container.text-page

    ul.nav.nav-tabs
      li.active
        a(href='/admin') User Admin
      li
        a(href='/admin/email') Email Blast
      li
        a(href='/admin/servers') Servers

    .heading
      h1 User Admin
      hr

    table.table-striped.table
      thead
        tr
          th #
          th Email
          th Channel
      tbody
      each user, i in user_list
        tr
          td=i
          td=user._id
          td=user.username
          td=user.channel

extends layout

block content
  #content.container.text-page
    .row
      .span4
      .span4

        - if (typeof(alert) !== 'undefined'){
          .alert #{alert}
        - }

        - if (typeof(err) !== 'undefined'){
          .alert.alert-error #{err}
        - }

        h2 Log In
        hr

        form(action="/login",method="post")
          div
            label Email
            input(type="text",name="username")

          div
            label Password
            input(type="password",name="password")

          div
            input.btn(type="submit",value="Log In")

          div
            hr
            .alert Accounts created before May 13th, 2013 need to reset their password!
            p
              a(href='/register') Create an account
              |&nbsp;or&nbsp;
              a(href='/reset') reset your password.

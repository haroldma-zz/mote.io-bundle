  body
    header#header
      .navbar
        .navbar-inner
          .container
            .row
              .span3
                a.brand(href='/')
                  img(src='images/clean/144.png', style='height: 50px;', alt='')
                  b Mote
                  | .io
              .span5.hide-on-mobile
                div(style=(page=='start') && "display: none")
                  ul.navigation.ac
                    li(class=(page=='home') && "active")
                      a(href='/') Home
                    li(class=(page=='faq') && "active")
                      a(href='/faq') FAQ
                    li(class=(page=='community') && "active")
                      a(href='/community') Community
                    li
                      a(href='http://sw1tch.com') Blog
              .span4.ar.action-items.hide-on-mobile
                if (typeof user !== "undefined" && user)
                  a.btn.btn-primary(href='/start', style=(page=='start') && "display: none")
                    .icon-refresh
                    | &nbsp; Sync with Phone
                  a(href='/logout', alt='Log out').log-out.icon-signout
                else
                  a(href='/register') Sign Up
                  | &nbsp; or &nbsp;
                  a(href='/login').btn Log In

      block content
      footer
        .container
          .row
            .span9
              h3 Mote.io
              ul
                li
                  a(href='/') Home
                li
                  a(href='/faq') FAQ
                li
                  a(href='/community') Community
                li
                  a(href='http://sw1tch.com') Blog
            .span3.social-networks
              h3 One man operation
              p I'm the guy in the video.
              a.icon-twitter(href='http://twitter.com/sw1tch', title='Follow me on Twitter')
              a.icon-github(href='http://github.com/ianjennings', title='Follow me on Github')

html.not-ie(lang='en').moteio-container
  head
    meta(charset='utf-8')
    title Mote.io - The Website Remote
    meta(name='description', content='Control your favorite web pages with mote.io')
    meta(name='author', content='Ian Jennings')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    link(rel='icon', type='image/png', href='/images/huge_logo.png')

    link(href='/css/style.css', rel='stylesheet')

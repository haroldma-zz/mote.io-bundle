  body
    header#header
      .navbar
        .navbar-inner
          .container
            a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            .row
              .span4
                a.brand(href='/')
                  img(src='images/clean/144.png', style='height: 50px;', alt='')
                  b Mote
                  | .io
              .span5
                .nav-collapse
                  ul.nav.ac
                    li(class=(page=='home') && "active")
                      a(href='/') Home
                    li(class=(page=='faq') && "active")
                      a(href='/faq') FAQ
                    li(class=(page=='community') && "active")
                      a(href='/community') Community
                    li
                      a(href='http://sw1tch.com') Blog
              .span3.ar.action-items.hide-on-mobile
                if (typeof user !== "undefined" && user)
                  a.btn.btn-primary
                    .icon-th-large
                    | &nbsp; Launch Homebase
                  a(href='/logout', alt='Log out').log-out.icon-signout
                else
                  a(href='/login') Log In
                  | &nbsp; or &nbsp;
                  a(href='/register').btn Sign Up
      block content
      footer
        .container
          .row
            .span9
              h3 Mote.io
              ul
                li
                  a(href='/') Home
                li
                  a(href='/start') Get Started
                li
                  a(href='/community') Community
                li
                  a(href='/developers') Developers
            .span3.social-networks
              h3 One man operation
              p Follow me here:
              a.icon-twitter(href='http://twitter.com/sw1tch', title='Follow me on Twitter')
              a.icon-github(href='http://github.com/ianjennings', title='Follow me on Github')

{
  "name": "Mote.io Sync",
  "version": "0.1",
  "description": "Connect your mote.io remote to your chrome browser!",
  "background_page": "background.html",
  "permissions": [
    "tabs",
    "<all_urls>",
    "http://173.255.236.180"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"],
      "js": [
        "lib/socket.io.js",
        "lib/jquery.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "http://*.grooveshark.com/*"
      ],
      "js": [
        "site-specific/grooveshark.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*.hypem.com/*",
        "http://hypem.com/*"
      ],
      "js": [
        "moteio.js",
        "site-specific/hypem.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://*.rdio.com/*"
      ],
      "js": [
        "site-specific/rdio.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://vimeo.com/*",
        "https://vimeo.com/*"
      ],
      "js": [
        "site-specific/vimeo.js"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Sync The Remote!",
    "popup": "sync.html"
  }
}

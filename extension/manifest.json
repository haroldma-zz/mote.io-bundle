{
  "name": "Mote.io",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Control websites with the mote.io mobile app! Use this to sync the mote.io app with your browser.",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": {                    // optional
      "19": "images/icons/19.png",           // optional
      "38": "images/icons/48.png"            // optional
    },
    "default_title": "Mote.io"      // optional; shown in tooltip
  },
  "icons": {
    "16": "images/icons/16.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "web_accessible_resources": [
    "moteio.js",
    "lib/socket.io.js",
    "lib/jquery.js",
    "lib/jquery.qrcode.min.js",
    "images/icon.png",
    "images/carbon_fibre_big.png"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"],
      "css": [
        "lib/moteio.css"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "http://*.grooveshark.com/*",
        "http://*.hypem.com/*",
        "http://hypem.com/*",
        "http://*.rdio.com/*",
        "http://vimeo.com/*",
        "https://vimeo.com/*",
        "http://www.htmltetris.com/",
        "http://shelby.tv/*",
        "http://*.shelby.tv/*",
        "http://*.pandora.com/*",
        "http://pandora.com/*"
      ],
      "js": [
        "inject.js"
      ],
      "run_at": "document_start"
    }
  ]
}
